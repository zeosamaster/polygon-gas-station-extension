{
    "name": "Polygon Gas Price",
    "description": "Displays the gas price for transactions on the Polygon(MATIC) Network",
    "version": "1.0",
    "manifest_version": 2,
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
    },
    "permissions": ["alarms"],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_popup": "src/popup.html"
    }
}